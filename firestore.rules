rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read roadmaps, quests, and resources
    match /roadmaps/{roadmapId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow writing for data seeding
    }
    
    match /quests/{questId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow writing for data seeding
    }
    
    match /resources/{resourceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // Allow writing for data seeding
    }
    
    // Quest completions - allow authenticated users to read/write any completion for now
    // We'll validate ownership in the application logic
    match /questCompletions/{completionId} {
      allow read, write: if request.auth != null;
    }
  }
}